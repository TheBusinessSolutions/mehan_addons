<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="ins_partner_ledger_wizard_inherit" model="ir.ui.view">
        <field name="name">ins.partner.ledger.view</field>
        <field name="model">ins.partner.ledger</field>
        <field name="inherit_id" ref="account_dynamic_reports.ins_partner_ledger_wizard"/>
        <field name="arch" type="xml">
            <xpath expr="//footer/button[@name='action_view']" position="after">
                <button name="action_pdf_company_group" type="object" string="Print by Group" class="oe_highlight"/>
            </xpath>
            <xpath expr="//field[@name='partner_ids']" position="after">
                <field name="company_group_ids"  widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

</odoo>