<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <field name="company_id" position="before">
                <div id="maintenance">
                    <h2>Retention Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <h2>Invoice Retention</h2>
                                <div class="content-group">
                                    <div class="mt16" >
                                        <label for="retention_product_id" class="col-xs-3 col-md-3 o_light_label"/>
                                        <field name="retention_product_id" class="oe_inline"/>
                                    </div>
                                    <div class="mt16">
                                    </div>
                                </div>
                                <div class="content-group">
                                    <div class="mt16" >
                                        <label for="retention_percentage" class="col-xs-3 col-md-3 o_light_label"/>
                                        <field name="retention_percentage" class="oe_inline"/>%
                                    </div>
                                    <div class="mt16">
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </field>
       </field>
   </record>
</odoo>
